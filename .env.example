# RentalSync Bridge Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database URL (default for local development)
DATABASE_URL=sqlite:///./data/rentalsync.db

# =============================================================================
# CLOUDBEDS API CONFIGURATION
# =============================================================================

# OAuth credentials from Cloudbeds Developer Portal
# https://hotels.cloudbeds.com/api/docs/
CLOUDBEDS_CLIENT_ID=your_client_id_here
CLOUDBEDS_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# SYNC CONFIGURATION
# =============================================================================

# Background sync interval in minutes (1-60, default: 5)
SYNC_INTERVAL_MINUTES=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Fernet encryption key for OAuth token storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your_fernet_key_here

# =============================================================================
# APPLICATION MODE
# =============================================================================

# Set to true for standalone development (disables Home Assistant auth)
# WARNING: Never enable in production - exposes admin interface without auth
STANDALONE_MODE=true

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Host and port for uvicorn server
HOST=0.0.0.0
PORT=8099

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
